#include <iostream>
#include <vector>

// Function to perform bubble sort in descending order
void bubbleSortDescending(std::vector<int>& arr) {
    int n = arr.size();
    bool swapped;
    for (int i = 0; i < n - 1; i++) {
        swapped = false;
        for (int j = 0; j < n - i - 1; j++) {
            // Compare current element with the next one
            if (arr[j] < arr[j + 1]) {
                // Swap if the current element is smaller than the next
                std::swap(arr[j], arr[j + 1]);
                swapped = true;
            }
        }
        // If no two elements were swapped by inner loop, then break
        if (!swapped)
            break;
    }
}

int main() {
    std::vector<int> numbers;
    int number;

    std::cout << "Enter integers (type a non-integer to stop): ";
    // Read integers until a non-integer is encountered
    while (std::cin >> number) {
        numbers.push_back(number);
    }

    // Clear the error flag caused by non-integer input
    std::cin.clear();

    // Perform the sorting
    bubbleSortDescending(numbers);

    // Print the sorted vector
    std::cout << "Sorted list in descending order: ";
    for (int num : numbers) {
        std::cout << num << " ";
    }
    std::cout << std::endl;

    return 0;
}
